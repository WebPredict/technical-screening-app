<div class="page-header">
  <h3>Search Candidates</h3>
</div>

<div class="row">
<%= form_tag candidates_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @candidates.any? %>
      <h3>Candidates Search Results</h3>
    <% else %>
      <h3>No results found for that search term.</h3>
    <% end %>
    <% else %>
    <h3>Recent Candidates</h3>
    <% end %>
      <table class="table table-bordered">
        <tr><th><%= sortable "name" %></th><th><%= sortable "email" %></th><th><%= sortable "phone" %></th><th># Submissions</th></th><th>Actions</th></tr>
        <%= render @candidates %>
      </table>
      <%= will_paginate @candidates %>
  </div>
</div>

