<div class="page-header">
    <section style="float:right">
      <% if logged_in? %>
      <%= link_to "Create New Candidate", new_candidate_path, class: "btn btn-sm btn-primary btn-responsive" %> 
      <% end %>
      </section>
  <h3>Search Candidates</h3>
</div>

<div class="row">
<%= form_tag candidates_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
      <% if @candidates.any? %>
        <h4>Candidates Search Results</h4>
      <% else %>
        <h4>No results found for that search term.</h4>
      <% end %>
    <% else %>
      <% if @candidates.any? %>
      <h4>Recent Candidates</h4>
      <table class="table table-bordered">
        <tr><th><%= sortable "name" %></th><th><%= sortable "email" %></th><th><%= sortable "phone" %></th>
        <th>Created On</th></th><th>Submissions</th></th><th>Actions</th></tr>
        <%= render @candidates %>
      </table>
      <%= will_paginate @candidates %>
      <% else %>
      <h4>No Candidates Yet.</h4>
      <% end %>
    <% end %>
  </div>
</div>

