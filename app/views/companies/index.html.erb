<h1>Search Companies</h1>
<div class="row">
<%= form_tag companies_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @companies.any? %>
      <h3>Search Results</h3>
    <% else %>
      <h3>No results found for that search term.</h3>
    <% end %>
    <% else %>
    <h3>Companies</h3>
    <% end %>
    <%= render 'shared/companies' %>
  </div>
</div>

