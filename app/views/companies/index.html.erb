<div class="page-header">
      <section style="float:right">
      <% if logged_in? %>
      <%= link_to "Create New Company", new_company_path, class: "btn btn-sm btn-primary btn-responsive" %> 
      <% end %>
      </section>
  <h3>Search Companies</h3>
</div>

<div class="row">
  <div class="col-md-12">
<%= form_tag companies_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
      <% if @companies.any? %>
        <h3>Search Results</h3>
      <% else %>
        <h3>No results found for that search term.</h3>
      <% end %>
    <% end %>
    <% if @companies.any? %>
      <h3>Companies</h3>
      <%= render 'shared/companies' %>
    <% else %>
      <h4>No companies yet.</h4>
    <% end %>
  </div>
</div>

