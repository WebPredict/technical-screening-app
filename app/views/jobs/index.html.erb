<div class="page-header">
      <section style="float:right">
      <% if logged_in? %>
      <%= link_to "Create New Job Listing", new_job_path, class: "btn btn-sm btn-primary btn-responsive" %> 
      <% end %>
      </section>
  <h3>Search Jobs</h3>
</div>

<div class="row">
<%= form_tag jobs_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @jobs.any? %>
      <h3>Jobs Search Results</h3>
    <% else %>
      <h3>No results found for that search term.</h3>
    <% end %>
    <% else %>
    <% end %>
    <% if @jobs.any? %>
    <h3>Recent Jobs</h3>
      <table class="table table-bordered">
        <tr><th><%= sortable "name", "Title" %></th><th><%= sortable "description" %></th>
        <th><%= sortable "company_id", "Company" %></th>
        <th>Created On</th><th>Actions</th></tr>
        <%= render @jobs %>
      </table>
      <%= will_paginate @jobs %>
    <% else %>
    <h3>No job listings yet.</h3>
    <% end %>
  </div>
</div>

