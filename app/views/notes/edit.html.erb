<% provide(:title, 'Edit Note') %>
<div class="page-header">
  <h3>Edit Note</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@note) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :candidate_id, @candidate.id %>

      <%= f.label :content %>
      <%= f.text_area :content, rows: "10", class: 'form-control' %>

      <div class="form-group">
        <div style="float:right">
          <%= f.submit "Update Note", class: "btn btn-primary" %>
          <span></span>
          <%= link_to "Cancel", root_path, class: "btn btn-default" %>
      </div>
      </div>
          
    <% end %>
  </div>
</div>
<br>
