<% provide(:title, @question.content) %>
<div class="row">
  <div class="col-md-12">
    <section>
      <h3> Question: </h3> <%= @question.content %> 
    </section>
    <section>
      <h3> Answer: </h3> <%= @question.answer %> 
    </section>
		<section>
			<h3>Difficulty: </h3> <%= @question.difficulty.level %>
		</section>
		<section>
			<h3>Category: </h3> <%= @question.category.name %>
		</section>
    <section>
        <%= link_to "Edit Question", edit_question_path(@question), class: "btn btn-success" %> 
        <%= link_to "Clone Question", clone_question_path(id: @question), class: "btn btn-success" %> 
        <%= link_to "Manage Tests", root_path, class: "btn btn-success" %> 
    </section>
  </div>
</div>

