<% provide(:title, @question.content) %>
<div class="page-header">
  <section style="float:right">
    <%= link_to "Search Questions", questions_path, class: "btn btn-sm btn-primary" %> 
    
    <% if logged_in? %>
      <%= link_to "Create New", new_question_path, class: "btn btn-sm btn-primary" %> 
      <% if @question.user_id == @current_user.id %>
        <%= link_to "Edit", edit_question_path(@question), class: "btn btn-sm btn-primary" %> 
      <% end %>
    <%= link_to "Clone", clone_question_path(id: @question), class: "btn btn-sm btn-primary" %> 
    <%= link_to "Manage Tests", root_path, class: "btn btn-sm btn-primary" %> 
    <% else %>
    <%= link_to "Sign Up", signup_path, class: "btn btn-sm btn-primary" %> 
    <% end %>        
  </section>
  <h3>Question Details</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <section>
      <h4> Question: </h4> 
      <% if @question.question_type_id != 2 %>
      <%= @question.content %> 
      <% else %>
      <%= @question_part_content %> 
      <ul>
        <li>A) <%= @question.answer2 %></li>
        <li>B) <%= @question.answer3 %></li>
        
        <% if @question.answer4 != nil %>
        <li>C) <%= @question.answer4 %></li>
        <% end %>
        <% if @question.answer5 != nil %>
        <li>D) <%= @question.answer5 %></li>
        <% end %>
      </ul>
      <% end %>
    </section>
    <section>
      <h4> Answer: </h4> 
      <% if logged_in? && current_user.premium? %>
      <%= 
      Nokogiri::HTML::DocumentFragment.parse(@question.answer).to_html.html_safe %> 
      <% else %>
        <%= link_to "Employer / Recruiter Membership Required", plans_path, class: "btn btn-xs btn-primary" %> 
      <% end %>
    </section>
    <% if current_user != nil %>
		<section>
			<h4>Privacy: </h4> 
			<% if @question.is_public? %>
        <span class="label label-info">Public</span>
        <% else %>
        <span class="label label-info">Private</span>
        <% end %>
		</section>
		<% end %>
		<section>
			<h4>Difficulty: </h4> 
			<%= link_to @question.difficulty.level, questions_path(difficulty_id: @question.difficulty.id) %>
		</section>
		<section>
			<h4>Category: </h4> 
			<%= link_to @question.category.name, questions_path(category_id: @question.category.id) %>
		</section>
		<section>
			<h4>Type: </h4> <%= @question.question_type.name %>
		</section>
		<br>
  </div>
</div>

