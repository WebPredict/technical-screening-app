<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Candidates<span style="float:right">
      <%= link_to candidates_path, class: "btn btn-xs btn-default" do %>
    <i class="glyphicon glyphicon-search"></i>
    <% end %></span></h3>
    </div>
  <div class="panel-body">
<% if @candidates.any? %>
      <div class="test-buttons">
        <% if @show_all %>
          <%= link_to "Show Recent Candidates", root_path(show_all: "false"), :class => "btn btn-sm btn-default" %>
          <%= link_to "Show Highest Scoring", root_path(show_all: "true"), :class => "btn btn-sm btn-primary" %>
        <% else %>
          <%= link_to "Show Recent Candidates", root_path(show_all: "false"), :class => "btn btn-sm btn-primary" %>
          <%= link_to "Show Highest Scoring", root_path(show_all: "true"), :class => "btn btn-sm btn-default" %>
        <% end %>
      </div>
      
      <div class="laptop-section">
        <div class="table-responsive">
          <table class="table">
            <tr><th>Actions</th><th><%= sortable "name" %></th><th>Email</th><th>Phone</th><th><%= sortable "created_at", "Created On" %></th>
            <th>Results</th></tr>
            <tbody>
            <%= render @candidates %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="mobile-section">
        <div class="list-group">
          <%= render partial: "candidates/mobile_candidate", collection: @candidates, as: :candidate %>
        </div>
      </div>

  <%= will_paginate @candidates %>
      </div>
<% else %>
<strong>No candidates yet.</strong>
<% end %>
</div>
</div>
