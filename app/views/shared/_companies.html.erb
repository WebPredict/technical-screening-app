<% if @companies && @companies.any? %>
  <table class="table table-bordered show-header">
    <tr><th>Actions</th><th><%= sortable "name" %></th><th><%= sortable "email" %></th><th><%= sortable "phone" %></th>
    <th><%= sortable "manager" %></th><th><%= sortable "address" %></th>
    <th><%= sortable "created_at", "Created On" %></th></tr>
    <%= render @companies %>
  </table>
  <%= will_paginate @companies %>
<% end %>

