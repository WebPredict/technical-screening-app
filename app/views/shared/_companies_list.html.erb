<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Companies<span style="float:right">
      <%= link_to companies_path, class: "btn btn-xs btn-default" do %>
    <i class="glyphicon glyphicon-search"></i>
    <% end %></span></h3>
    </div>
  <div class="panel-body">
<% if @companies && @companies.any? %>

    <div class="laptop-section">
      <div class="table-responsive">
        <table class="table">
      <tr><th>Actions</th><th><%= sortable "name" %></th><th><%= sortable "email" %></th><th><%= sortable "phone" %></th>
      <th><%= sortable "manager" %></th><th><%= sortable "address" %></th><th>Created On</th></tr>
        <tbody>
        <%= render @companies %>
        </tbody>
      </table>
      </div>
    </div>
    <div class="mobile-section">
      <div class="list-group">
        <%= render @companies %>
      </div>
    </div>
  <%= will_paginate @companies %>
<% else %>
<strong>No companies yet. <%= link_to "Add one!", new_company_path, class: "btn btn-sm btn-primary" %></strong>
<% end %>
</div>
</div>
