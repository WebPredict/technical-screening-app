      <%= link_to edit_category_by_name_path(name: category[0]), class: "btn btn-xs btn-primary" do %>
        <div class="edit_icon"><i class="glyphicon glyphicon-edit"></i></div> 
      <% end %>
    <% end %>
 <%= link_to category[0] + " (" + category[1].to_s + ")", questions_path(category: category[0]) %>
