<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="question_form">
        <%= render 'shared/question_form' %>
      </section>
      <section class="lists">
      <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Your Custom Tests</h3>
      </div>
        <div class="panel-body">
        <% if @user.tests.any? %>
          <% @user.tests.each do |test| %>
            <div class="test_link">
              <%= link_to test.name, test %> (<%= pluralize(test.questions.count, "question") %>)
            </div>
          <% end %>
        <% end %>
        <div class="other">
          <%= link_to "Create Test", new_test_path, :class => "btn btn-med btn-primary" %>
        </div>
        </div>
        </div>
      </section>
    </aside>
      <div class="col-md-8">
        <%= render 'shared/candidate_feed' %>
      </div>
      <div class="col-md-8">
        <%= render 'shared/test_results' %>
      </div>
      <div class="col-md-8">
        <%= render 'shared/jobs_list' %>
      </div>
      <div class="col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Metrics</h3>
          </div>
          <div class="panel-body">
          <strong>Number of Candidates per Job</strong>
          </div>
        </div>
      </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to TechScreen</h1>

  <h2>
    Screen your interview candidates with ease.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Features", about_path, class: "btn btn-lg btn-default" %>
</div>

<div class="row">
    <p class="center">
  TechScreen.net helps you set up screening tests for software development candidates. Quickly create tests from a variety of technology topics and thousands of questions, or create your own. Easily manage your candidates' results.
  </p>
</div>
<div class="row padded-bottom-row">
  <div class="col-md-4">
    <h3>Unlimited Tests</h3>
    <p>Create as many screening tests as you'd like, with as many questions as you'd like in any technology category imaginable.</p>
  </div>
    <div class="col-md-4">
    <h3>Large Question Library</h3>
    <p>Quickly put together screening tests for popular technologies using our existing library of questions and answers.</p>
  </div>
  <div class="col-md-4">
    <h3>Manage Candidates</h3>
    <p>Invite as many interview candidates as you'd like to take your tests, score and manage the results.</p>
  </div>
</div>
<div class="row"></div>
<div class="row color-row">
  <div class="col-md-10 padded-col">
    <h3>Feature Details</h3>
  <ul>
  <li>TechScreen.net helps you set up screening tests for software development candidates.</li>
  <li>Quickly assemble screening tests from a large library of technology topics and questions.</li> 
  <li>Use existing popular screening tests, and enhance them with your own screening content.</li> 
  <li>Easily manage your candidates' results. Forward results on to employers, auto-score tests.</li>
  <li>Automatically generate screening tests simply by specifying a topic list and a # of questions. 
  <li>For example, enter: <strong>"Java, SQL, HTML, JavaScript", Questions per topic: 5...</strong>.</li>
  <li>...and voila! You've got a screening test with 20 questions on those 4 topics.</li>  
  <li>Sort + filter by highest scoring / most recent candidates' test results.</li>
  </ul>
</div>
</div>

<div class="row">
  <br>
  <h1>Technical Screening Topics Include:</h1>
  <div class="col-md-4">
    <ul>
    <% @categories_first.each do |category| %>
    <li style="margin-top: 5px"><% if current_user != nil && current_user.admin? %>
      <%= link_to edit_category_path(category), class: "btn btn-xs btn-primary" do %>
        <div class="edit_icon"><i class="glyphicon glyphicon-edit"></i></div> 
      <% end %>
    <% end %>
 <%= link_to category.name, questions_path(category_id: category) %>
    </li>
    <% end %>
    </ul>
  </div>
    <div class="col-md-4">
    <ul>
    <% @categories_second.each do |category| %>
    <li style="margin-top: 5px"><% if current_user != nil && current_user.admin? %>
      <%= link_to edit_category_path(category), class: "btn btn-xs btn-primary" do %>
        <div class="edit_icon"><i class="glyphicon glyphicon-edit"></i></div> 
      <% end %>
    <% end %> <%= link_to category.name, questions_path(category_id: category) %></li>
    <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <ul>
    <% @categories_third.each do |category| %>
    <li style="margin-top: 5px"><% if current_user != nil && current_user.admin? %>
      <%= link_to edit_category_path(category), class: "btn btn-xs btn-primary" do %>
        <div class="edit_icon"><i class="glyphicon glyphicon-edit"></i></div> 
      <% end %>
    <% end %> <%= link_to category.name, questions_path(category_id: category) %></li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>
