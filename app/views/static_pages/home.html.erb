<script>
  function calcSavings () {
    var num = parseInt($('#num_candidates').val());
    var spent = parseFloat($('#time_spent').val());
    var hourly = parseFloat($('#hourly_cost').val());
    var saved = parseFloat($('#time_saved').val());
    
    var oldResult = num * (spent / 60.0) * hourly;
    var newResult = num * (spent / 60.0) * hourly * ((100.0 - saved) / 100.0);

    var savings = (oldResult - newResult);
    $('#savings_result').text("$" + savings + " / Month, or $" + (savings * 12) + " / Year!");
  }

</script>

<div class="row calculator">
  <div class="col-md-8 col-md-offset-2">
  <h1>TechScreen.net Estimated Savings Calculator</h1>
<!--  <h4>Calculate money saved using TechScreen.net for candidate screening</h4> -->
  <form class="form-horizontal">

    <div class="form-group">
      <label for="num_candidates" class="col-sm-5 control-label">Number of Candidates / Month</label>
      <div class="col-sm-6">
      <input class="form-control" type="text" name="num_candidates" id="num_candidates" value="30" />
      </div>
    </div>

    <div class="form-group">
      <label for="time_spent" class="col-sm-5 control-label">Minutes Spent Screening Candidate</label>
      <div class="col-sm-6">
      <input class="form-control" type="text" name="time_spent" id="time_spent" value="45" />
      </div>
    </div>

    <div class="form-group">
      <label for="hourly_cost" class="col-sm-5 control-label">Hourly Screening Cost</label>
      <div class="col-sm-6">
      <div class="input-group"><div class="input-group-addon">$</div><input class="form-control" type="text" name="hourly_cost" id="hourly_cost" value="50" /></div>
      </div>
    </div>

    <div class="form-group">
      <label for="time_saved" class="col-sm-5 control-label">% Of Time Saved Using TechScreen</label>
      <div class="col-sm-6">
      <input class="form-control" type="text" name="time_saved" id="time_saved" value="50" />
      </div>
    </div>

    <div class="form-group">
      <label for="estimated_savings" class="col-sm-5 control-label">Your Estimated Savings</label>
        <div id="savings_result" class="col-sm-6 savings">$562 / Month, or $6744 / Year!</div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-10">
    <input type="button" name="submit" value="Compute Savings" class="btn btn-primary" onclick="calcSavings()" />
    </div>
  </div>
</form>
