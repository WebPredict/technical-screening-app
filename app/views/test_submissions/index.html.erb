<div class="page-header">
  <h3>Search Test Submissions</h3>
</div>
<div class="row">
<%= form_tag test_submissions_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @test_submissions.any? %>
      <h4>Test Submissions Search Results</h4>
    <% else %>
      <h4>No results found for that search term.</h4>
    <% end %>
    <% else %>
    <h4>Recent Test Submissions</h4>
    <% end %>
      <table class="table table-bordered show-header">
        <tr><th>Actions</th><th>Candidate Name</th><th>Test Name</th><th><%= sortable "name", "Submission Name" %></th>
        <th><%= sortable "score" %></th><th><%= sortable "time" %></th></tr>
        <%= render @test_submissions %>
      </table>
      <%= will_paginate @test_submissions %>
  </div>
</div>

