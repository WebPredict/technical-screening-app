<% provide(:title, 'Score Test') %>
<h1>Test Submission for candidate: <%= @candidate.name %></h1>
<h3>Test: <%= @test.name %></h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@test_submission) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <% if @test_submission.answered_questions.any? %>
        <% @test_submission.answered_questions.each do |aq| %>

          <section>Question: <%= aq.question.content %></section>
          <section>Your Answer: <% = aq.answer %>
            <%= f.check_box_field :aq.correct, class: 'form-control' %>
            <%= f.label_field(:aq.correct, "Correct?") %>
          </section>
          
        <% end %>
      <% end %>

      <%= f.submit "Submit Scoring", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
