<% provide(:title, 'Edit Test') %>
<h1>Edit Test</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@test) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Update Test", class: "btn btn-primary" %>
      <%= link_to "Select Questions", select_questions_path, class: "btn btn-success" %>
      <%= link_to "Dashboard", root_path, class: "btn btn-success" %>
    <% end %>
  </div>
</div>
