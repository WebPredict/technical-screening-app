<% provide(:title, 'Edit Test') %>
<h1>Edit Test</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@test) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <div class="checkbox">
        <%= f.label :is_public, class: "checkbox inline" do %>
          <%= f.check_box :is_public %>
          <span>Make Test Public</span>
        <% end %>
      </div>

      <%= f.submit "Update Test", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= link_to "Select Questions", select_questions_path(id: @test.id), class: "btn btn-success" %>
      <%= link_to "Dashboard", root_path, class: "btn btn-success" %>
  </div>
</div>
