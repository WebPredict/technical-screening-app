<h1>Search Tests</h1>
<div class="row">
<%= form_tag tests_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @tests.any? %>
      <h3>Test Search Results</h3>
    <% else %>
      <h3>No results found for that search term.</h3>
    <% end %>
    <% else %>
    <h3>Recent Tests</h3>
    <% end %>
    <table class="table table-bordered">
      <tr><th><%= sortable "name" %></th><th># Questions</th><th>Actions</th></tr>
      <%= render @tests %>
    </table>
    <%= will_paginate @tests %>
  </div>
</div>

