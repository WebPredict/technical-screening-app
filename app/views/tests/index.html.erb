<div class="page-header">
<% if @single_test_select %>
<h3>Filter Tests To Send</h3>
<% else %>
<h3>Search Tests</h3>
<% end %>
</div>
<div class="row">
<%= form_tag tests_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @tests.any? %>
      <h4>Test Search Results</h4>
    <% else %>
      <h4>No results found for that search term.</h4>
    <% end %>
    <% else %>
      <% if @single_test_select == false %>
      <h4>Recent Tests</h4>
      <% end %>
    <% end %>

      <% if @single_test_select %>    
        <%= form_tag select_test_path, :class => "nicesearch", :method => 'post' do %>
        <%= hidden_field_tag :id, @candidate.id %>
        <table class="table table-bordered">
          <tr><th><%= sortable "name" %></th><th><%= sortable "description" %></th><th># Questions</th>
          <th><%= sortable "created_at" %></th><th>Select Test</th></tr>
          <%= render @tests %>
        </table>
        <%= will_paginate @tests %>
        <%= submit_tag "Send Selected Test To Candidate", :class => "btn btn-primary" %>
        <% end %>
      <% else %>
        <table class="table table-bordered">
          <tr><th><%= sortable "name" %></th><th><%= sortable "description" %></th><th># Questions</th><th><%= sortable "created_at" %></th><th>Actions</th></tr>
          <%= render @tests %>
        </table>
        <%= will_paginate @tests %>
      <% end %>
  </div>
</div>

<br><br>
<div class="row">
  <div class="col-md-12">
    <section>
      <%= link_to "Dashboard", root_path, class: "btn btn-primary" %> 
      <%= link_to "Create New Test", new_test_path, class: "btn btn-primary" %> 
    </section>
  </div>
</div>
