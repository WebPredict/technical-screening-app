<% provide(:title, 'Select Random Test Questions') %>

<div class="row">
  <div class="col-md-12">
  <%= form_tag submit_random_questions_path, :method => 'post' do %>
    <%= hidden_field_tag :id, @test.id %>
    
      <%= label_tag :topic_list, "Comma separated topic list:" %>
      <%= text_field_tag :topic_list, "Java, SQL", class: 'form-control' %>

      <%= label_tag :num_per_topic, "Number of questions per topic:" %>
      <%= text_field_tag :num_per_topic, "5", class: 'form-control' %>

      <%= label_tag :difficulty_level, "Difficulty level:" %>
  	  <div class="field">
        <%= select_tag(:difficulty_level, options_from_collection_for_select(Difficulty.all, "id", "level",
            params[:difficulty_level]), include_blank: true) %>
      </div>

        <div class="form-group btn-responsive">
          <div style="float:right">
            <input class="btn btn-primary" name="commit" type="submit" value="Add Random Questions" />
            <span></span>
            <%= link_to "Cancel", questions_path, class: "btn btn-default" %>
        </div>
        </div>

  <% end %>
  </div>
</div>