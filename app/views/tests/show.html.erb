<% provide(:title, @test.name) %>
<div class="page-header">
  <h3>Test Details</h3>
</div>

<div class="row">
  <div class="col-md-12">
      <% if @test.questions.any? %>
        <section>
        <%= link_to "Search Tests", tests_path, class: "btn btn-primary" %> 
        <%= link_to "Take Test", new_test_submission_path(id: @test.id), class: "btn btn-primary" %> 
        <%= link_to "Edit Test", edit_test_path(@test), class: "btn btn-primary" %> 
        <%= link_to "Create New Test", new_test_path, class: "btn btn-primary" %> 
        <%= link_to "Dashboard", root_path, class: "btn btn-primary" %> 
    </section>
      <% end %>
    <section>
      <strong>
        Name: </strong><%= @test.name %>
    </section>
    <section>
      <strong>
        Description: </strong>
        <%= @test.description %>
    </section>
    <br>
    <section>
      <% if @test.questions.any? %>
        <strong>This Test's Questions</strong> (<%= @test.questions.count %>)
        <table class="table table-bordered">
          <tr><th><%= sortable "content", "Question" %></th><th><%= sortable "answer" %></th>
          <th><%= sortable "difficulty" %></th><th><%= sortable "question_type" %></th><th><%= sortable "category" %></th><th>Actions</th></tr>
          <%= render @test_questions %>
        </table>
        <%= will_paginate @test_questions %>
      <% end %>
    </section>
    <section>
        <%= link_to "Search Tests", tests_path, class: "btn btn-primary" %> 
        <%= link_to "Take Test", new_test_submission_path(id: @test.id), class: "btn btn-primary" %> 
        <%= link_to "Edit Test", edit_test_path(@test), class: "btn btn-primary" %> 
        <%= link_to "Create New Test", new_test_path, class: "btn btn-primary" %> 
        <%= link_to "Dashboard", root_path, class: "btn btn-primary" %> 
    </section>
  </div>
</div>

