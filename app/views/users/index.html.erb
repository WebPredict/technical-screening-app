<% provide(:title, 'Search Users') %>

<h1>Search Users</h1>
<div class="row">
<%= form_tag users_path, :class => "nicesearch", :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], :class => "form-control" %>
        <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
    </div>
<% end %>
</div>
        
<div class="row">
  <div class="col-md-12">
    <% if @searched %>
    <% if @users.any? %>
      <h3>Your Glorious Search Results</h3>
    <% else %>
      <h3>No users found matching that search.</h3>
    <% end %>
    <% else %>
    <h3>All Users</h3>
    <% end %>
    <%= will_paginate %>

    <ul class="users">
      <%= render @users %>
    </ul>

    <%= will_paginate %>
  </div>
</div>

